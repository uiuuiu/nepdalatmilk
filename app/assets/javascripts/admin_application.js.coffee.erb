$ ->
  $(".admin-select-limit").on 'change', ->
    $(this).closest("form").submit()

  $(".item-new-form-button").on 'click', ->
    if $(".new-item-form-div").is(":visible")
      $(".new-item-form-div").addClass("hide")
      $(".item-new-form-button").text("Tạo mới")
    else
      $(".new-item-form-div").removeClass("hide")
      $(".item-new-form-button").text("Ẩn tạo mới")
